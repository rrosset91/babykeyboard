<aura:component>
    <aura:attribute name="data" type="Object"/>
    <!-- <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>     -->

    <aura:if isTrue="{!or(v.data == null, v.data==undefined)}">
        <div class=" slds-m-around_xx-large">
            <div class="slds-text-heading_small slds-align_absolute-center">Nenhuma informação para ser exibida</div>
        </div>

        <aura:set attribute="else">
            <div class="slds-progress slds-progress_vertical">
                <ol class="slds-progress__list">
                    <aura:iteration items="{!v.data}" var="item" indexVar="indexVar">
                        <li class="{!item.invoiceStatusID == '2' ? 'slds-progress__item slds-is-completed' : 'slds-progress__item slds-is-completed slds-has-error'}">
                            <span class="slds-icon_container slds-icon-utility-success slds-progress__marker slds-progress__marker_icon slds-progress__marker_icon-success" title="Complete">                    
                                <aura:if isTrue="{!item.invoiceStatusID == '2'}"> 
                                    <lightning:icon size="xx-small" iconName="utility:success" title="Sucesso" />
                                    <aura:set attribute="else">
                                        <lightning:icon size="xx-small" iconName="utility:clear" title="Pendente" />                               
                                    </aura:set>
                                </aura:if>
                            </span> 
                            <div class="slds-progress__item_content">
                                <div class="slds-grid slds-wrap slds-m-top_x-large">
                                    <div class="slds-col slds-size_1-of-1">
                                        <div class="slds-text-heading_medium slds-text-title_bold">{!item.eventDescription}</div>                    
                                    </div>

                                    <div class="slds-col slds-size_2-of-6 slds-m-top_x-small">
                                        <div class="slds-text-title">Data</div>
                                    </div>
                                    <div class="slds-col slds-size_4-of-6 slds-m-top_x-small">
                                        <div class="slds-text-title">Status</div>
                                    </div>
                                    <!-- <div class="slds-col slds-size_2-of-4 slds-m-top_x-small"/> -->

                    
                                    <div class="slds-col slds-size_2-of-6">
                                        <lightning:formattedDateTime  value="{!item.eventDate}" year="numeric" month="numeric" day="numeric" hour="2-digit" minute="2-digit"></lightning:formattedDateTime>
                                    </div>
                    
                                    <div class="slds-col slds-size_4-of-6">
                                        <aura:if isTrue="{!and(item.criticalReasonDescription != null, item.criticalReasonDescription != undefined)}">
                                            <div>{!item.criticalReasonDescription}</div>
                                            <aura:set attribute="else">
                                                <div>{!item.invoiceStatusDescription}</div>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </aura:iteration>
                </ol>
            </div>
        </aura:set>
    </aura:if>

</aura:component>