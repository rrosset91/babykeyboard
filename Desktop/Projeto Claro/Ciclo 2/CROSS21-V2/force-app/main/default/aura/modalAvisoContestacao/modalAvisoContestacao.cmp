<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" extends="c:Utils">
        
    <aura:attribute name="title" type="string" default="Atenção"/>
    <aura:attribute name="typeIconWarning" type="string" default="utility:warning" />
    <aura:attribute name="typeVariant" type="string" default="Success"/>
    <aura:attribute name="message" type="string" default="Mensagem"/>
    <aura:attribute name="showButton1" type="Boolean" default="true"/>
    <aura:attribute name="showButton2" type="Boolean" default="true"/>
    <aura:attribute name="textbutton1" type="string" default="Fechar"/>
    <aura:attribute name="textbutton2" type="string" default="Fechar e ir para Ficha Financeira"/>
    <aura:attribute name="onClickButton1" type="string"/>
    <aura:attribute name="onClickButton2" type="string"/>
    <aura:attribute name="showButtonX" type="Boolean" default="true"/>
	
	<aura:method name="open" action="{!c.handleOpen}" />
    <aura:method name="close" action="{!c.handleClose}" />
    
	<c:UiModal aura:id="avisoModal" class="title" title="{!v.title}" size="dialog" showButtonX="{!v.showButtonX}">
    	<aura:set attribute="content">
            <div>
                <lightning:layout verticalAlign="center" horizontalAlign="center">
                    <lightning:layoutItem padding="around-small">
                    	<lightning:icon iconName="{!v.typeIconWarning}" variant="{!v.typeVariant}" title="medium (default) "/>
                    </lightning:layoutItem>
                    <lightning:layoutItem >
            			<ui:outputText value="{!$Label.c.modalAvisoContestacao}"/>
                    </lightning:layoutItem>
                </lightning:layout>
            </div>
        </aura:set>	

        <aura:set attribute="footer">
        	<div class="modal-buttons">
                <lightning:layout horizontalAlign="spread">
                        <div class="slds-p-top_medium slds-p-right_xx-small slds-p-bottom_xx-small" >
                            <lightning:button variant="destructive-text" 
                                              label="{!v.textbutton1}" 
                                              onclick="{!v.onClickButton1}" />
                        </div>
                        
                        <div class="slds-p-top_medium slds-p-right_xx-small slds-p-bottom_xx-small">
                            <lightning:button variant="destructive" 
                                              label="{!v.textbutton2}" 
                                              onclick="{!v.onClickButton2}"/>
                        </div>
                </lightning:layout>
            </div>
       </aura:set>
	</c:UiModal>
</aura:component>