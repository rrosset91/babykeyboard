<!-- CEC_PME_MobileButtonQuoteStatus.cmp -->
<aura:component implements="force:lightningQuickAction,force:hasRecordId" controller="CEC_PME_MobileButtonsController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:registerEvent name="CEC_PME_MobileButtonEvt" type="c:CEC_PME_MobileButtonEvt"/>

    <aura:attribute name="isQuickAction" type="Boolean" default="true" required="true"/>
    <aura:attribute name="order" type="Order" />
    <aura:attribute name="statusQuoteOptions" type="String[]" />
    
    <lightning:card class="slds-p-around_medium">
        <lightning:spinner aura:id="mySpinner" alternativeText="Loading" size="large" />
        <div class="slds-grid slds-wrap">
            <div class="slds-col slds-size_1-of-1 slds-large-size_4-of-12">
                <h1>
                    <span class="slds-page-header__title slds-truncate">
                       {!$Label.c.CEC_PME_MobileButtonQuoteStatus_1}
                    </span>
                </h1>
            </div>
            <div class="slds-col slds-size_1-of-1 slds-large-size_8-of-12">
                <div class="slds-grid slds-wrap slds-grid_align-end">
                    
                    <div class="slds-col slds-size_1-of-1 slds-large-size_5-of-12">
                        <div class="slds-m-around_xxx-small">
                            <lightning:button label="{!$Label.c.CEC_PME_MobileButtonQuoteStatus_2}" onclick="{!c.closeAction}" class="slds-button_stretch" />
                        </div>
                    </div>
                    <div class="slds-col slds-size_1-of-1 slds-large-size_5-of-12">
                        <div class="slds-m-around_xxx-small">
                            <lightning:button variant="brand" label="{!$Label.c.CEC_PME_MobileButtonQuoteStatus_3}" onclick="{!c.save}" class="slds-button_stretch"/>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="slds-col slds-size_1-of-1">
                <div class="select-small">
                    <lightning:select name="select" label="{!$Label.c.CEC_PME_MobileButtonQuoteStatus_4}" required="true" value="{!v.order.StatusQuote__c}">
                        <aura:iteration items="{!v.statusQuoteOptions}" var="statusQuoteOption">
                            <option text="{!statusQuoteOption}"></option>
                        </aura:iteration>
                    </lightning:select>
                </div>
            </div>
            
            <div class="slds-col slds-size_1-of-1">
                <lightning:input label="{!$Label.c.CEC_PME_MobileButtonQuoteStatus_5}" value="{!v.order.NumberQuote__c}" maxlength="40" required="true"/>
            </div>
            
            <div class="slds-col slds-size_1-of-1">
                <lightning:textarea label="{!$Label.c.CEC_PME_MobileButtonQuoteStatus_6}" value="{!v.order.Observacoes__c}" maxlength="10000" />
            </div>
            
        </div>
    </lightning:card>
</aura:component>